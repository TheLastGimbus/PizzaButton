<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="notification_on_send"
        android:summary="@string/pref_description_notification_on_send"
        android:title="@string/pref_title_notification_on_send" />
    <EditTextPreference
        android:defaultValue="0"
        android:key="edit_text_preference_number"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_number" />
    <EditTextPreference
        android:defaultValue="@string/pref_default_message"
        android:key="edit_text_preference_message"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_message" />


</PreferenceScreen>
